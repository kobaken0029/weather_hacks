<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="weatherListener"
            type="jp.co.aizu_student.weatherhacks.interfaces.OnWeatherClickListener" />

        <variable
            name="forecast"
            type="jp.co.aizu_student.weatherhacks.models.Forecast" />

        <variable
            name="location"
            type="jp.co.aizu_student.weatherhacks.models.Location" />

        <variable
            name="temp"
            type="jp.co.aizu_student.weatherhacks.models.Temperature" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/pref_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{weatherListener.onPrefectureClick}"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textSize="24sp"
            app:location="@{location}"
            tools:text="東京都" />

        <TextView
            android:id="@+id/max_temperature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{weatherListener.onTemperatureClick}"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="#FF0000"
            android:textSize="24sp"
            app:temperature="@{temp.getMax()}"
            tools:text="27℃" />

        <TextView
            android:id="@+id/min_temperature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{weatherListener.onTemperatureClick}"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="#0000FF"
            android:textSize="24sp"
            app:temperature="@{temp.getMin()}"
            tools:text="27℃" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/weather_image"
                android:layout_width="168dp"
                android:layout_height="144dp"
                android:layout_gravity="center"
                android:contentDescription="@string/weather_info"
                android:onClick="@{weatherListener.onWeatherClick}"
                tools:src="@drawable/no_image" />
        </FrameLayout>

        <TextView
            android:id="@+id/weather_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="@{weatherListener.onWeatherClick}"
            android:text='@{forecast.getTelop() ?? ""}'
            android:textSize="80sp"
            tools:text="晴れ" />

    </LinearLayout>
</layout>
